<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HouseDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/listing_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <TextView
            android:id="@+id/address_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listing_image"
            android:layout_marginTop="16dp"
            style="@style/DarkModeIntroHeadline"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:text="Address Text"
            android:layout_marginHorizontal="16dp"
        />


        <View
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/Divider"
            android:layout_marginTop="8dp"
            android:layout_below="@id/address_view"/>
        <TextView
            android:id="@+id/from_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleText"
            android:text="From"
            android:layout_alignParentStart="true"
            android:layout_below="@id/top_divider"
            android:layout_alignBaseline="@id/price_view"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="16dp"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/googlesans_bold"
            android:text="$100"
            android:layout_below="@id/top_divider"
            android:layout_toRightOf="@id/from_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            style="@style/DarkModeAccountPageItemStyleText"
            android:text="/week"
            android:layout_below="@id/top_divider"
            android:layout_toRightOf="@id/price_view"
            android:layout_alignBaseline="@id/from_text"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="32dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/top_divider"
            android:id="@+id/button_like">

            <ImageView
                android:id="@+id/like_button_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/description_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_below="@id/from_text"
            android:text="Description"
            android:layout_marginTop="32dp"
            style="@style/DarkModeAccountPageItemStyleHeaders"/>
        <TextView
            android:id="@+id/description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@id/description_header"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            style="@style/DarkModeAccountPageItemStyleText"
            android:text="test"/>
        <TextView
            android:id="@+id/rooms_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooms"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:layout_below="@id/description_view"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"/>
        <RelativeLayout
            android:id="@+id/last_rooms_layout_notice"
            android:visibility="gone"
            android:layout_below="@id/description_view"
            android:layout_toRightOf="@id/rooms_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/alarm_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_black_24dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_toRightOf="@id/alarm_notice"
            android:text="Last rooms available!"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:textColor="@color/quantum_googred"
            android:layout_marginTop="32dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/rooms_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rooms_header"
            android:layout_marginTop="8dp"
            android:text="6 Rooms"
            style="@style/DarkModeAccountPageItemStyleText"/>

        <TextView
            android:id="@+id/let_info_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let Information"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:layout_below="@id/rooms_view"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/move_in_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            style="@style/personalDetailsCardStyle"
            android:layout_below="@id/let_info_header">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/move_in_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:paddingTop="6dp"
                android:text="Move in"
                android:layout_centerHorizontal="true"
                style="@style/DarkModeAccountPageItemStyleHeaders"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/move_in_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/move_in_header"
                android:text="20-05-2010"
                style="@style/DarkModeAccountPageItemStyleHeaders"
                android:layout_centerInParent="true"
                android:padding="16dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/move_out_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            style="@style/personalDetailsCardStyle"
            android:layout_toRightOf="@id/move_in_card"
            android:layout_below="@id/let_info_header">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/move_out_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:paddingTop="6dp"
                    android:text="Move out"
                    android:layout_centerHorizontal="true"
                    style="@style/DarkModeAccountPageItemStyleHeaders"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/move_out_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/move_out_header"
                    android:text="20-05-2010"
                    style="@style/DarkModeAccountPageItemStyleHeaders"
                    android:layout_centerInParent="true"
                    android:padding="16dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/contact_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Contact Seller"
            style="@style/primaryButtonWhiteTextStyle"
            android:layout_below="@id/move_in_card"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Delete Listing"
            android:visibility="gone"
            style="@style/deleteButtonStyle"
            android:layout_below="@id/move_in_card"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"/>

        </RelativeLayout>



</ScrollView>