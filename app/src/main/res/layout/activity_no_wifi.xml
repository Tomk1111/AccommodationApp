<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoWifiActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView"
        style="@style/DarkModeIntroHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="200dp"
        android:text="@string/no_internet_connection_available"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/DarkModeAccountPageItemStyleHeaders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/please_reconnect_to_continue"
        android:textAlignment="center"
        android:layout_below="@id/textView"
        app:hintTextAppearance="@style/MyHintStyle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView2"
        android:layout_marginVertical="24dp"
        app:srcCompat="@drawable/ic_signal_wifi_off_black_24dp" />
    </RelativeLayout>
</ScrollView>