<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInformationFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/display_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:text="Display Name"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
        <EditText
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_name_tag"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            style="@style/DarkModeAccountPageItemStyleText"/>
        <TextView
            android:id="@+id/email_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:text="Email"
            android:layout_below="@id/username_field"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/email_tag"
            android:text="Name"
            style="@style/DarkModeAccountPageItemStyleText"
            />

        <TextView
            android:id="@+id/date_joined_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:text="Date Joined"
            android:layout_below="@id/email_field"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:id="@+id/date_joined_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleText"
            android:text="test"
            android:layout_below="@id/date_joined_tag"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:id="@+id/last_login_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:text="Last Login"
            android:layout_below="@id/date_joined_text"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"/>
        <TextView
            android:id="@+id/last_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleText"
            android:text="test"
            android:layout_below="@id/last_login_tag"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/lightText1"
            android:background="@color/colorPrimary"
            android:layout_below="@id/last_login_text"
            android:text="Save Changes"
            android:fontFamily="@font/googlesans_bold"/>
    </RelativeLayout>
</ScrollView>