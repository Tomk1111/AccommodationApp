<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PersonalInformationFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/name_card"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            style="@style/personalDetailsCardStyle"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/display_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/DarkModeAccountPageItemStyleHeaders"
                android:text="@string/edit_display_name"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            style="@style/DarkModeAccountPageItemStyleEditText"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/email_card"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            style="@style/personalDetailsCardStyle"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/name_card"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/email_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:text="@string/email"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/email_tag"
            style="@style/DarkModeAccountPageItemStyleText"
            />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/date_joined_card"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            style="@style/personalDetailsCardStyle"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/email_card"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_joined_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:text="@string/date_joined"
            android:layout_below="@id/email_field"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/date_joined_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleText"
            android:layout_below="@id/date_joined_tag"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:layout_marginHorizontal="8dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/last_login_card"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            style="@style/personalDetailsCardStyle"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/date_joined_card"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/last_login_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleHeaders"
            android:text="@string/last_login"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/last_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DarkModeAccountPageItemStyleText"
            android:layout_below="@id/last_login_tag"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="4dp"
            android:layout_marginHorizontal="8dp"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/lightText1"
            android:background="@color/colorPrimary"
            android:layout_below="@id/last_login_card"
            android:text="@string/save_changes"
            android:fontFamily="@font/googlesans_bold"/>
    </RelativeLayout>
</ScrollView>