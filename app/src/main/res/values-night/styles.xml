<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/lightText1</item>
        <item name="colorControlActivated">@color/lightText1</item>
        <item name="colorControlHighlight">@color/lightText1</item>
    </style>

    <style name="darkBackgroundStyle">
        <item name="android:background">@color/darkBackground</item>
    </style>
    <style name="darkToolbarBackground">
        <item name="android:background">@color/darkBackground</item>
    </style>
    <style name="darkTabsBackground">
        <item name="android:background">@color/darkBackground</item>
    </style>



    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider1</item>
    </style>
    <style name="BottomNavigationStyle" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/googlesans_bold</item>
        <item name="colorPrimary">@color/lightText1</item>
        <item name="android:textColorSecondary">@color/lightText2</item>
    </style>
    <style name="DarkModeToolbarTitleStyleTheme">
        <item name="fontFamily">@font/googlesans_bold</item>
        <item name="android:textColor">@color/lightText1</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="DarkModeAccountPageItemStyleHeaders">
        <item name="fontFamily">@font/googlesans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightText1</item>
    </style>
    <style name="DarkModeAccountPageItemStyleText">
        <item name="fontFamily">@font/googlesans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lightText2</item>
    </style>
    <style name="DarkModeAccountPageItemStyleEditText">
        <item name="fontFamily">@font/googlesans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/lightText2</item>
        <item name="android:textColor">@color/lightText2</item>
    </style>
    <style name="DarkModeIntroHeadline">
        <item name="fontFamily">@font/googlesans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/lightText1</item>
        <item name="android:textColorHint">@color/lightText2</item>
    </style>
    <style name="personalDetailsCardStyle">
        <item name="cardBackgroundColor">@color/divider1</item>
    </style>
    <style name="DarkModeIntroFields">
        <item name="fontFamily">@font/googlesans_regular</item>
        <item name="android:textColor">@color/lightText1</item>
        <item name="backgroundTint">@color/lightText2</item>
        <item name="android:textColorHint">@color/lightText2</item>
    </style>
    <style name="searchIconStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <item name="closeIcon">@drawable/ic_search_white_24dp</item>
    </style>
    <style name="primaryButtonStyle">
        <item name="android:textColor">@color/darkText2</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
    </style>
    <style name="primaryButtonWhiteTextStyle">
        <item name="android:textColor">@color/lightText1</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="unlikedButtonStyle">
        <item name="android:textColor">@color/darkText2</item>
        <item name="android:background">@color/personalInfoCards</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
    </style>
    <style name="splashHeadline">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/lightText1</item>
        <item name="fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="splashIcon">
        <item name="android:background">@drawable/ic_homey_white</item>
    </style>
    <style name="splashBg">
        <item name="background">@color/personalInfoCards</item>
    </style>
    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/lightText2</item>
        <item name="fontFamily">@font/googlesans_regular</item>
    </style>
</resources>
